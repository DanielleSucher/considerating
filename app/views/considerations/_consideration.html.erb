<div id="each-consideration" class="row">
    <%= link_to wrap(consideration.content), consideration_path(consideration) %>
	<div id="voting">
    	<% if session[:user_id] != nil %>
    		<% @consideration = consideration %>
			<%= render 'users/vote_form' %>
		<% else %>
			<div id="number-notes" class="row ">
	 			(There have been <%= consideration.votes_count %> votes on this consideration so far.)
			</div>
		<% end %>
	</div>
</div>