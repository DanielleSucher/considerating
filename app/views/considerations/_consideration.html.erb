<div id="each-consideration" class="hero-unit delete-able">
    <div id="consideration-text">
    	<%= link_to wrap(consideration.content), consideration_path(consideration) %><br />
	</div>
	<% @consideration = consideration %>
	<div id="voting" class="vote-form">
		<%= render 'users/vote_form' %><br />
		<div id="submitted">
			<%= render 'considerations/destroy_consideration' %> 
			submitted by <%= link_to "#{@consideration.user.name}", 
			user_path(@consideration.user) %> on <%= @consideration.created_at.strftime("%-m/%-d/%y") %>
		</div>
			<div class="each-tweet">
				<a href="https://twitter.com/intent/tweet?button_hashtag=considerating" class="twitter-hashtag-button" data-text="Considerate or creepy? Vote and help me decide! http://considerating.com/considerations/<%= @consideration.id %>">Tweet</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
			</div>
	</div>
</div>