<div id="each-consideration" class="hero-unit delete-able">
    <div id="consideration-text">
    	<%= link_to wrap(consideration.content), consideration_path(consideration) %><br />
	</div>
	<% @consideration = consideration %>
	<div id="voting" class="vote-form">
		<%= render 'users/vote_form' %><br />
		<div id="submitted">
			<%= render 'considerations/destroy_consideration' %> 
			<%= link_to "submitted by #{consideration.user.name} 
			on #{consideration.user.created_at.strftime("%-m/%-d/%y")}", 
			user_path(consideration.user) %>
		</div>
		<div class="each-tweet">
			<a href="https://twitter.com/share" class="twitter-share-button" data-text="Considerate or creepy? Vote and help me decide! http://considerating.com/considerations/<%= @consideration.id %>" data-hashtags="considerating">Tweet</a>
			<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
		</div>
	</div>
</div>