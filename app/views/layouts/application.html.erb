<!DOCTYPE html>
<html>
	<head>
  		<title><%= yield(:title) %>Considerating</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>
  		<%= javascript_include_tag "application" %>
  		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<%= render 'layouts/nav' %>
			<div class="row" id="banner">
				<h1><%= link_to yield(:title)+"Considerating", root_path %></h1>
			</div>
			<% if flash[:notice] %>
				<div id="flash">
      				<p class="notice"><%= flash[:notice] %></p>
      			</div>
    		<% end %>
    		<% if flash[:error] %>
    			<div id="flash">
      				<p class="error"><%= flash[:error] %></p>
      			</div>
    		<% end %>
			<%= yield %>
		</div>
		<%= render 'layouts/footer' %>
	</body>
</html>
