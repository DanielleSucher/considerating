<div id="consideration-content-big">
	<% if Consideration.count != 0 %>
		<div class="row">
			<div id="randomizer">
				<%= link_to "See a random consideration!", root_path,
												:id => "change-consideration" %>
			</div>	
		</div>
		<div class="row">
			<div id="home-consideration-content-inner">
				<p><%= link_to wrap(@consideration.content), consideration_path(@consideration) %></p>
				<span id="submitted"><%= render 'considerations/destroy_consideration' %> <%= link_to "submitted by #{@consideration.user.name} on #{@consideration.user.created_at.strftime("%-m/%-d/%y")}", user_path(@consideration.user) %></span>
			</div>
		</div>
	<% end %>
</div>