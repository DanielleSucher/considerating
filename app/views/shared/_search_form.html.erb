<div class="searchdiv">
	<%= form_tag search_path, :method => :get, :class => "searchform form-inline" do %>
	<span class="searchspan">
	<%= text_field_tag :query, params[:search], 
							:class => "searchfield span2 input-append",
							:value => "Search", 
    						:onFocus => "this.value=''", 
    						:onBlur => "if (this.value == '') 
    						{this.value='Search'};" %><%= submit_tag "  ", 
    																:name => nil, 
    																:class => "searchbutton add-on" %></span>
	<% end %>
</div>